<p><a href="/objects">Objects</a></p>
<h1><%= @thing.name %></h1>

<p>Huge picture of (original) thing</p>

<div class="row">
	<div class="three columns">

	<% if @thing.institution %>
	  <p>From <%= link_to @thing.institution.name, @thing.institution %></p>
	<% else %>
	  <p>Not part of an institution.</p>
	<% end %>
	
	<h5>Made by</h5>
	<p>
	  <% @thing.creators.each do |creator| %>
		<span><%= creator %></span>
	  <% end %>
	</p>
		
	<h5>Tags</h5>	
	<p>
	  <% @thing.tags.each do |tag| %>
		<span><%= tag %></span>
	  <% end %>
	</p>	
	
	</div>
	<div class="six columns">
		<p><%= @thing.description %></p>
		<p><%= @thing.description_attribution_url %></p>

		<p><%= @thing.wikipedia_url %></p>

		<p><%= @thing.three_dimensions ? '3D' : '2D' %></p>
	</div>
	<div class="three columns">
		<h5>Found in...</h5>
		<p>
			<a href="">Box 1</a>
			<a href="">Box 2</a>
		</p>	
	</div>
</div>